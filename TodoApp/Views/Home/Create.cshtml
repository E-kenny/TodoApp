@{
    ViewData["Title"] = "Add Todo List";
}
<h1>@ViewData["Title"]</h1>

<form action="/Activity/Create" method="Post">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Description</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="description" required>
        <div id="emailHelp" class="form-text">Add your task.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Start Time</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="startTime" required>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Duration</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="duration" required>
    </div>

    @*<div class="mb-3">
        <label class="form-check-label" for="exampleCheck1">Status</label>
        <input type="text" class="form-control" id="exampleCheck1" name="status" required>
    </div>*@
    <button type="submit" class="btn btn-primary">Submit</button>
</form>